<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="110.0dip"
        android:layout_margin="5.0dip">

        <RelativeLayout android:padding="8.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageView"
                android:layout_width="20.0dip"
                android:layout_height="20.0dip"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30.0dip"
                android:src="@drawable/green"
                xmlns:app="http://schemas.android.com/apk/res-auto" />

            <View android:id="@+id/divider"
                android:background="?android:listDivider"
                android:layout_width="2.0dip"
                android:layout_height="fill_parent"
                android:layout_marginStart="25.0dip"
                android:layout_toEndOf="@id/imageView"
                android:backgroundTint="@color/gray" />

            <TextView
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50.0dip"
                android:layout_marginTop="2.0dip"
                android:text="Last Build"
                android:layout_toRightOf="@id/imageView" />

            <TextView
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#ff000000"
                android:id="@+id/jobTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50.0dip"
                android:layout_marginTop="2.0dip"
                android:text="TEST"
                android:layout_toRightOf="@id/imageView"
                android:layout_below="@id/status" />

            <TextView
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:id="@+id/buidNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50.0dip"
                android:layout_marginTop="2.0dip"
                android:text="Last Build"
                android:layout_toRightOf="@id/imageView"
                android:layout_below="@id/jobTitle" />

            <TextView
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:id="@+id/duration"
                android:background="@color/deep_sky_blue"
                android:paddingLeft="15.0dip"
                android:paddingRight="15.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50.0dip"
                android:layout_marginTop="2.0dip"
                android:text="2 days ago"
                android:layout_toRightOf="@id/imageView"
                android:layout_below="@id/buidNumber" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>