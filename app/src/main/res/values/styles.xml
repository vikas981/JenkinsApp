<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowContentTransitions">true</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.NoActionBar" parent="@style/AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="@style/ThemeOverlay.AppCompat.Light" />
    <style name="AppTheme.ProfileTheme" parent="@style/AppTheme">
        <item name="android:textColor">@color/whiteTextColor</item>
        <item name="colorAccent">@color/profileAccentColor</item>
        <item name="colorPrimaryDark">@color/profilePrimaryDark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AwesomeValidation.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/holo_red_light</item>
    </style>

    <style name="profileStyledBackButton">
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/profile_back_button</item>
        <item name="android:paddingLeft">30.0dip</item>
        <item name="android:paddingTop">10.0dip</item>
        <item name="android:paddingRight">50.0dip</item>
        <item name="android:paddingBottom">10.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">250.0dip</item>
        <item name="android:drawableLeft">@drawable/back_to_home_button</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="proifleDetailsView">
        <item name="android:background">@color/profileAccentColor</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">2.0dip</item>
        <item name="android:layout_marginTop">5.0dip</item>
    </style>
    <style name="parent">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="profileDetailsLayout" parent="@style/parent">
        <item name="android:layout_marginTop">20.0dip</item>
    </style>

    <style name="profileDetailsImage">
        <item name="android:layout_width">40.0dip</item>
        <item name="android:layout_height">40.0dip</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>

    <style name="viewParent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="profileDetailsTextMain" parent="@style/viewParent">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/blackTextColor</item>
        <item name="android:layout_marginLeft">10.0dip</item>
    </style>

    <style name="profileDetailsMiniText" parent="@style/viewParent">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/blackTextColor</item>
        <item name="android:layout_marginLeft">10.0dip</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="headerText" parent="@style/parent">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/blackTextColor</item>
    </style>
    <style name="TransparentText" parent="@android:style/TextAppearance">
        <item name="android:textColor">#00000000</item>
    </style>
    <style name="about_About" />

    <style name="about_About.wrapper">
        <item name="android:background">@color/about_background_color</item>
    </style>

    <style name="about_sub_wrapper">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="about_image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>





</resources>